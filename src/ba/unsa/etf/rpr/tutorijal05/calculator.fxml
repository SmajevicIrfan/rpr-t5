<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
       <Label fx:id="display" text="${controller.result}" GridPane.columnSpan="4"/>

       <Button fx:id="btn0" mnemonicParsing="false" text="0" onAction="#btn0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
       <Button fx:id="btn1" mnemonicParsing="false" text="1" onAction="#btnNumber" GridPane.rowIndex="4" GridPane.columnIndex="0" />
       <Button fx:id="btn2" mnemonicParsing="false" text="2" onAction="#btnNumber" GridPane.rowIndex="4" GridPane.columnIndex="1" />
       <Button fx:id="btn3" mnemonicParsing="false" text="3" onAction="#btnNumber" GridPane.rowIndex="4" GridPane.columnIndex="2" />
       <Button fx:id="btn4" mnemonicParsing="false" text="4" onAction="#btnNumber" GridPane.rowIndex="3" GridPane.columnIndex="0" />
       <Button fx:id="btn5" mnemonicParsing="false" text="5" onAction="#btnNumber" GridPane.rowIndex="3" GridPane.columnIndex="1" />
       <Button fx:id="btn6" mnemonicParsing="false" text="6" onAction="#btnNumber" GridPane.rowIndex="3" GridPane.columnIndex="2" />
       <Button fx:id="btn7" mnemonicParsing="false" text="7" onAction="#btnNumber" GridPane.rowIndex="2" GridPane.columnIndex="0" />
       <Button fx:id="btn8" mnemonicParsing="false" text="8" onAction="#btnNumber" GridPane.rowIndex="2" GridPane.columnIndex="1" />
       <Button fx:id="btn9" mnemonicParsing="false" text="9" onAction="#btnNumber" GridPane.rowIndex="2" GridPane.columnIndex="2" />

       <!--<Button fx:id="btnDot" mnemonicParsing="false" text="." onAction="#btnDor" GridPane.rowIndex="5" GridPane.columnIndex="2" />
       -->
   </children>
</GridPane>
