<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
       <Label fx:id="display" text="${controller.result}" GridPane.columnSpan="4" />

       <Button fx:id="btn0" mnemonicParsing="false" onAction="#btn0" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
       <Button fx:id="btn1" mnemonicParsing="false" onAction="#btnNumber" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />
       <Button fx:id="btn2" mnemonicParsing="false" onAction="#btnNumber" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
       <Button fx:id="btn3" mnemonicParsing="false" onAction="#btnNumber" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
       <Button fx:id="btn4" mnemonicParsing="false" onAction="#btnNumber" text="4" GridPane.columnIndex="0" GridPane.rowIndex="3" />
       <Button fx:id="btn5" mnemonicParsing="false" onAction="#btnNumber" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
       <Button fx:id="btn6" mnemonicParsing="false" onAction="#btnNumber" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />
       <Button fx:id="btn7" mnemonicParsing="false" onAction="#btnNumber" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <Button fx:id="btn8" mnemonicParsing="false" onAction="#btnNumber" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <Button fx:id="btn9" mnemonicParsing="false" onAction="#btnNumber" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />

       <Button fx:id="dotBtn" mnemonicParsing="false" text="." onAction="#dotBtn" GridPane.rowIndex="5" GridPane.columnIndex="2" />

   </children>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</GridPane>
